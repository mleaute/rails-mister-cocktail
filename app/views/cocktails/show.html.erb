<h1><%= @cocktail.name.capitalize %></h1>

<h2>Ingredients</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> - <%= dose.description %> <%= link_to 'delete', dose_path(dose), method: :delete, data: { confirm: 'are you sure?' } %></li>
  <% end %>
</ul>

<%= link_to 'add a dose', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'back to list', cocktails_path %>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
